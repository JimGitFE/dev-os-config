{
    "description": "2 Keystrokes (already default to mac)",
    "manipulators": [
    {           
        "type": "basic",
        "from": { "key_code": "c", "modifiers": { "mandatory": ["control"] } },
        "to": [{ "key_code": "c", "modifiers": ["left_command"] }],  
        "conditions": [
          { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }
        ]
      },
      {
        "type": "basic",
        "from": { "key_code": "v", "modifiers": { "mandatory": ["control"] } },
