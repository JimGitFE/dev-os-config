{
  "description": "3 Application Specific (VSCode)",
  "manipulators": [
    {
      "type": "basic",
      "from": {
      "key_code": "left_option",
        "modifiers": { "optional": ["shift"] }
      },
      "to": [{ "key_code": "left_control" }],
      "conditions": [
        {
          "type": "frontmost_application_unless",
          "bundle_identifiers": [ "^com\\.utmapp\\.UTM$" ]
        },
        {
          "type": "variable_if",
          "name": "left_control_pressed",
          "value": 0
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "o",
        "modifiers": { "mandatory": ["right_command", "left_command"], "optional": ["shift"] }
      },
      "to": [{ "key_code": "up_arrow", "modifiers": ["option"] }],
      "conditions": [
        {
          "type": "frontmost_application_unless",
          "bundle_identifiers": [ "^com\\.utmapp\\.UTM$" ]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "l",
        "modifiers": { "mandatory": ["right_command", "left_command"], "optional": ["shift"] }
      },
      "to": [{ "key_code": "down_arrow", "modifiers": ["option"] }],
      "conditions": [
        {
          "type": "frontmost_application_unless",
          "bundle_identifiers": [ "^com\\.utmapp\\.UTM$" ]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "o",
        "modifiers": { "mandatory": ["right_command", "left_option"], "optional": ["shift"] }
      },
      "to": [{ "key_code": "up_arrow", "modifiers": ["left_control"] }],
      "conditions": [
        {
          "type": "frontmost_application_unless",
          "bundle_identifiers": [ "^com\\.utmapp\\.UTM$" ]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "l",
        "modifiers": { "mandatory": ["right_command", "left_option"], "optional": ["shift"] }
      },
      "to": [{ "key_code": "down_arrow", "modifiers": ["left_control"] }],
      "conditions": [
        {
          "type": "frontmost_application_unless",
          "bundle_identifiers": [ "^com\\.utmapp\\.UTM$" ]
        }
      ]
    }
  ]
}
