{
  "description": "1 Platform Os Modifiers",
  "manipulators": [
    {
      "type": "basic",
      "from": { "key_code": "f6" },
      "to": [{ "software_function": { "iokit_power_management_sleep_system": { "delay_milliseconds": 10 } }}],
      "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
    },
    
    {
        "type": "basic",
        "from": { "key_code": "delete_or_backspace", "modifiers": { "mandatory": ["left_command"] } },
        "to": [{ "key_code": "delete_or_backspace", "modifiers": ["option"] }],  
      "conditions": [
        { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }
      ]
    },
    
    {
      "type": "basic",
      "from": { "key_code": "k", "modifiers": { "mandatory": ["right_command", "left_command", "shift"] } },
      "to": [{ "key_code": "left_arrow", "modifiers": ["option", "shift"] }],  
      "conditions": [
        { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }
      ]
    },
    {
        "type": "basic",
        "from": { "key_code": "k", "modifiers": { "mandatory": ["right_command", "left_command"] } },
        "to": [{ "key_code": "left_arrow", "modifiers": ["option"] }],  
        "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
      },

      {
        "type": "basic",
        "from": { "key_code": "semicolon", "modifiers": { "mandatory": ["right_command", "left_command", "shift"] } },
        "to": [{ "key_code": "right_arrow", "modifiers": ["option", "shift"] }],  
        "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
      },
      {
        "type": "basic",
        "from": { "key_code": "semicolon", "modifiers": { "mandatory": ["right_command", "left_command"] } },
        "to": [{ "key_code": "right_arrow", "modifiers": ["option"] }],  
        "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
      },

      {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "mandatory": ["right_command"], "optional": ["shift"] } },
          "to": [ { "key_code": "left_arrow" } ],
          "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["right_command"], "optional": ["shift"] } },
          "to": [ { "key_code": "down_arrow" } ],
          "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "o", "modifiers": { "mandatory": ["right_command"], "optional": ["shift"] } },
          "to": [ { "key_code": "up_arrow" } ],
          "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon", "modifiers": { "mandatory": ["right_command"], "optional": ["shift"] } },
          "to": [ { "key_code": "right_arrow" } ],
          "conditions": [{ "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] }]
        },

        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "mandatory": ["left_control", "right_command"], "optional": ["any"] } },
          "to": [ { "key_code": "home" } ],
          "conditions": [ { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon", "modifiers": { "mandatory": ["left_control", "right_command"], "optional": ["any"] } },
          "to": [ { "key_code": "end" } ],
          "conditions": [ { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "o", "modifiers": { "mandatory": ["left_control", "right_command"], "optional": ["any"] } },
          "to": [ { "key_code": "page_up" } ],
          "conditions": [ { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["left_control", "right_command"], "optional": ["any"] } },
          "to": [ { "key_code": "page_down" } ],
          "conditions": [ { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "delete_or_backspace", "modifiers": { "mandatory": ["left_control"] } },
          "to": [{ "key_code": "delete_forward" }],
          "conditions": [ { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] } ]        
        },
        {
          "type": "basic",
          "from": { "key_code": "delete_or_backspace", "modifiers": { "mandatory": ["left_control", "left_command"] } },
          "to": [{ "key_code": "delete_forward", "modifiers": ["left_option"] }],
          "conditions": [ { "type": "frontmost_application_unless", "bundle_identifiers": ["^com\\.utmapp\\.UTM$"] } ]        
        }
  ]
}